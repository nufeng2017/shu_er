/* 字体颜色 */
.c-999999{
  color:#999;
}
.c-ff3e3e{
  color:#ff3e3e;
}
.c-584133{
  color:#584133;
}

/* 面板 */
.z-inf-box{
  border-top:20rpx solid #f5f5f5;
}
.z-inf-box .z-inf-body{
  padding: 0 30rpx 0 50rpx;
}
.z-inf-box .z-inf-foot{
  padding: 0rpx 30rpx;
  position: relative;
  overflow: hidden;
  width:100%;
  box-sizing: border-box;
}
.z-inf-box .z-inf-foot:after{
  content: '';
  position: absolute;
  width:100%;
  height: 1px;
  top:0;
  left: 30rpx;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
/* 单元格 */
.z-cell{
  padding: 0rpx 45rpx 0rpx 53rpx !important;
  box-sizing: border-box !important;
  height: 96rpx !important;
  line-height: 96rpx !important;
  align-items: center;
  -moz-align-items: center;
  -o-align-items: center;
  -ms-align-items: center;
  box-align: center;
  -webkit-box-align: center;
  -o-box-align: center;
  -moz-box-align: center;
}
.z-cell:after{
  left: 53rpx !important;
}
.z-cell .van-icon{
  font-size: 40rpx;
  color:#c8c8c8;
}
.z-cell-text{
  font-size: 28rpx;
}

/* 按钮 */
.z-btn{
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 78rpx;
  box-sizing: border-box;
  border:1px solid #cccccc;
  border-radius: 8rpx;
  color:#333;
  font-size: 30rpx;
  display: inline-block;
  text-align: center;
}
.z-btn-1{
  border-color:#b20a0a;
  background: #b20a0a;
  color:#fff;
}
/* 登录按钮 */
.z-login-btn{
  margin-top: 130rpx;
  padding: 0 50rpx;
}
.z-login-btn button{
  background: #fff;
  margin-bottom: 26rpx;
  border: none;
  outline: none;
  text-align: center;
  height: 87rpx;
  font-size: 32rpx;
  color:#fff;
  background: #b20a0a;
  box-sizing: border-box;
}
.z-login-btn .z-wx-icon{
  margin-right: 10rpx;
}
.z-login-btn .z-wx-icon{
  width:46rpx;
  height: 100%;
}
.z-login-btn .z-message-login{
  background: #fff !important;
  color:#b20a0a !important;
  border:1px solid #b20a0a !important;
}
.z-login-btn .z-message-login .z-wx-icon{
  width:34rpx !important;
  height: 100%;
}
.z-login-btn button::before,.z-login-btn button::after{
  display: none;
}
/* 查看更多 */
.z-check-more{
  color:#000;
  font-size: 40rpx;
  font-weight: 900;
}
.z-check-more .c-999999{
  font-size: 26rpx;
  line-height: 70rpx;
  font-weight: 400;
}
.z-check-more .c-999999 image{
  width:9rpx;
  height: 15rpx;
  margin-left: 5rpx;
}

