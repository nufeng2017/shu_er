.z-main{
  padding-bottom: 210rpx;
}
/* 轮播 */
.z-swiper-container{
  margin-bottom: 48rpx;
}
.z-swiper-container ,.z-swiper-wrap{
  height: 550rpx;
}

.z-shop-info{
  padding: 0 30rpx 50rpx;
  overflow: hidden;
}
.z-shop-info-head .z-shop-title{
  font-size: 38rpx;
  color:#333;
  margin-bottom: 20rpx;
  font-weight: 900;
}
.z-shop-info-head .z-shop-pirce .z-price-txt{
  font-size: 40rpx;
  color:#ff3e3e;
  font-weight: 900;
} 
.z-shop-info-head .z-shop-pirce .z-last-price{
  color:#999999;
  font-size: 26rpx;
  margin: 0 12rpx;
  text-decoration: line-through;
}
.z-shop-info-head .z-shop-pirce .z-price-icon{
  padding: 5rpx 7rpx;
  color:#ec6941;
  font-size: 22rpx;
  border:1px solid #ec6941;
  border-radius: 4rpx;
  line-height: 1;
}
.z-shop-num{
  color:#666666;
  font-size: 30rpx;
}
.z-shop-num text{
  color:#999;
}
.z-support-service{
  color:#999999;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.z-support-service::before{
  content: '';
  background:url(data:image/png;base64,) no-repeat center;
  width:36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  background-size:100%;
}
.z-shop-block-title{
  font-size: 40rpx;
  color:#333;
  font-weight: 900;
  margin-bottom: 24rpx;
}
.z-shop-intruduction-text{
  color:#666666;
  font-size: 30rpx;
  line-height: 50rpx;
}
.z-comment-item{
  padding: 35rpx 0;
  position: relative;
}
.z-comment-item:after{
  content: '';
  height: 1px;
  width:750rpx;
  background: #eaeaea;
  position: absolute;
  bottom: 0;
  left: 0rpx;
}

/* 商品导航栏 */
.z-goods-action .z-btn-box{
  height: 100%;
}
.z-goods-action .z-btn{
  height: 100%;
  width:230rpx;
  background-color:#ff963a;
  color:#fff;
  line-height: 98rpx;
  border: none;
  border-radius: 0;
}
.z-goods-action .z-btn.z-btn-1{
  background: #ff3938;
}
.z-goods-action .z-goods-action-main{
  height: 98rpx !important;
}
.z-add-adress-tips{
  padding: 60rpx;
  text-align: center;
  font-size: 30rpx;
}