.z-main{
  background-position: left 500rpx;
  min-height: 100%;
  background-size: 100% auto;
  background-repeat: no-repeat;
  position: relative;
  box-sizing: border-box;
  padding: 70rpx 40rpx;
}
.z-main:after{
  content:'';
  display: block;
  position: absolute;
  width:100%;
  height:500rpx;
  background: #bf3a3a;
  left: 0;
  top:0;
}
.z-content-container{
  position: relative;
  z-index: 1;
}

.z-info-box{
  border-radius: 10rpx;
  min-height: 632rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 4rpx rgba(0,0,0,0.2);
  overflow: hidden;
}
.z-banner{
  margin-top: 50rpx;
  border-radius: 10rpx;
  overflow: hidden;
  height: 181rpx;
}
.z-info-box{
  padding: 50rpx 50rpx 0;
  text-align: center;
  font-size: 28rpx;
  color:#202830;
}
.z-info-box .z-vip-code{
  font-size: 30rpx;
  color:#333;
  font-weight: 900;
  margin-bottom: 100rpx;
}
.z-bar-code-img{
  height: 145rpx;
  margin-top: 33rpx;
  margin-bottom: 26rpx;
}
.z-bar-code-tips{
  color:#9ca8b7;
}
.z-bar-code-tips view{
  width:27rpx;
  height: 27rpx;
  margin-right: 6rpx;
  display: inline-block;
  vertical-align: -10%;
}