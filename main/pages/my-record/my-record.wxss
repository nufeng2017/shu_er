.z-main{
  background-position: left 500rpx;
  min-height: 100%;
  background-size: 100% auto;
  background-repeat: no-repeat;
  position: relative;
  box-sizing: border-box;
  padding: 70rpx 50rpx;
}
.z-main:after{
  content:'';
  display: block;
  position: absolute;
  width:100%;
  height:500rpx;
  background: #bf3a3a;
  left: 0;
  top:0;
}
.z-content-container{
  position: relative;
  z-index: 1;
}
.z-last-money-show{
  text-align: center;
  font-size: 30rpx;
  color:#fe9999;
  margin-bottom: 70rpx;
}
.z-last-money-show .z-last-num{
  color:#fff;
  font-size: 80rpx;
  margin-top: 10rpx;
}
.z-info-box{
  border-radius: 10rpx;
  min-height: 800rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 4rpx rgba(0,0,0,0.2);
  overflow: hidden;
}
.z-info-box-head{
  height: 102rpx;
  line-height: 102rpx;
}
.z-info-box-head>view{
  width:33.3333333%;
  color:#fff;
  font-size: 30rpx;
  font-weight: 900;
  text-align: center;
  background: #912727;
}
.z-info-box-body>view>view{
  font-size: 24rpx;
  width:33.3333333%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.z-info-box-body>view:nth-child(2n){
  background: #fafafa;
}
.z-red{
  color:#ff6666;
}
.z-green{
  color:#339933;
}