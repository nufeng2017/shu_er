.z-scroll{
  position: fixed;
  width:100%;
  top:0;
  left: 0;
  box-sizing: border-box;
  height: 100%;
  margin-top: 91rpx;
}
.z-list-container{
  padding: 40rpx 45rpx 150rpx;
}
.z-shop-block{
  margin-right: 40rpx;
  margin-bottom: 45rpx;
}
.z-shop-block:nth-child(2n){
  margin-right: 0;
}
.z-tab{
  font-size: 34rpx !important;
  color:#666 !important;
}
.z-tab-active{
  color:#333 !important;
  font-weight: 900 !important;
}
.z-tabs .van-tab{
  height: 90rpx;
  line-height: 90rpx;
}
.z-tabs .van-tabs__wrap{
  height: 90rpx !important;
  border-bottom: 1px solid #eaeaea;
}