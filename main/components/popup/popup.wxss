.z-title{
  position: relative;
  font-size:36rpx;
  font-weight: 900;
  color:#212121;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eaeaea;
}
.z-title .z-icon{
  position: absolute;
  top:-50rpx;
  right: 28rpx;
  box-sizing: border-box;
  height: 120rpx;
  width:100rpx;
  padding:  45rpx 35rpx;
}
.z-popup-foot{
  padding: 0rpx 50rpx 60rpx;
}
.z-popup-foot>.z-foot-btn{
  margin-right: 20rpx;
  color:#b20a0a;
  border-color:#b20a0a;
}
button{
