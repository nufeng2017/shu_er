<!-- 底部结算栏 -->
<view class="z-submit-bar ~z-flex ~z-flex-align-center ~z-flex-justify">
  <view class="z-submit-bar-checkbox">
    <van-checkbox value="{{ checkAll }}" bind:change="change" checked-color="#b20a0a" icon-size="40rpx">
      <text class="z-check-txt">全选</text>
    </van-checkbox>
  </view>
  <view class="~z-flex">
    <view class="z-submit-bar-txt ~z-flex-direction ~z-flex ~z-flex-center">
      <view class="z-submit-price">
        <text>合计：</text>
        <text class="z-price">￥{{price}}</text>
      </view>
      <view class="z-has-freight">{{hasFreight}}</view>
    </view>
    <view class="z-submit-bar-btn" bindtap="submit">结算({{submitCount}})</view> 
  </view>
</view>